doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    script(src="https://cdn.jsdelivr.net/npm/chart.js@3.6.2/dist/chart.min.js")
    script(src='https://code.jquery.com/jquery-3.6.0.js')
    script(src='/javascripts/tilt.js-master/dest/tilt.jquery.js')
    script(src='/javascripts/tilt.js-master/dest/tilt.jquery.min.js')
    script(src='/javascripts/tilt.js-master/src/tilt.jquery.js')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css')
    link(rel='stylesheet' type='text/css' href='/stylesheets/Chart.css')
    script(src='/javascripts/ChartTab.js')
    title Document
  section.showcase 
    header
      img.logo(id="logobtn" src="./images/logo.png" onclick="window.location.assign('memberIndex')")
      h3.topmenutext(id="Chart" onclick="window.location.assign('Chart')") My chart
      h3.topmenutext(id="SetGoal" onclick="window.location.assign('setgoal')") Set a goal
      h3.topmenutext(id="AboutUS" onclick="window.location.assign('memberAboutUs')") About us
      .toggle
    .col-data1 
      p.dispRangeTextclass(id="dispRangeText") Show specific range
      .dataPickArea
        .StartDiv 
          p.datePickText Starting Time
          input#dateRangeStart.dateInput(type='date' onchange='filterDataW();filterDataB()')
        .EndDiv
          p.datePickTextEnd Ending Time
          input#dateRangeEnd.dateInput(type='date' onchange='filterDataW();filterDataB()') 
    //顯示canvas的tab
    .tab-for-canvas
      button.tablinks(onclick="chartTab(event, 'canvasWeight');filterDataW()") Weight
      button.tablinks(onclick="chartTab(event, 'canvasBmi');filterDataB()") Bmi 
    button.btnrecord Record Today
    .record 
      h1 Record Today
      .recordweight Weight
        p#lastdayweight Last weight 
        p.todayweight Today weight 
          input(type="number" name="Todayweight" min=0)#weight
          .todayweight#kg KG
      .recordexercise Exercise
        p#lastdayexercise Last exercise
        p.todayexercise Today exercise
          input(type="number" name="Todayexercise" min=0)#exercise
          .todayexercise#min Minute
      .close X
      input(type='hidden' name='action' value='add')
      input#submit(type='submit' value='submit')

    #canvasWeight.canvasbox 
      select(onchange="changeChartW(this); filterDataW()")
        optgroup(label="Select Chart")
        option(value="bar") Bar
        option(value="pie") Pie 
        option(value="line") Line 
        option(value="radar") Radar
      canvas#myChartWeight

    #canvasBmi.canvasbox
      select(onchange="changeChartB(this); filterDataB()")
        optgroup(label="Select Chart")
        option(value="bar") Bar
        option(value="pie") Pie 
        option(value="line") Line 
        option(value="radar") Radar
      canvas#myChartBmi

  .menu
    img.memberimage(src="/images/member.png" alt="")
    .loginbtndiv
      p.Username=`Welcome  ${username}`
      br
      button.editMemberbtn(onclick="window.location.assign('editMember')") Edit member
      button.logoutbtn(onclick="window.location.assign('login')") Logout
    #linkweb
script.
  setInterval("linkweb.innerHTML=new Date().toLocaleString()+' 星期'+'日一二三四五六'.charAt(new Date().getDay());",1000);
script(src='/javascripts/tilt.js-master/src/tilt.jquery.js') 
script(src='/javascripts/index.js')
