div
  button(onclick="window.location.assign('login')") < back 
  .containter-fluid
    if messages.error 
      .row
        .col.bg-light.text-center.p-2 
          h4(class="text-danger") #{messages.error}
  h1 Sign Up
  form( action='/signup' method='POST')
    center
      #content
        table
          img(src='./images/logo.png' alt='')
          tr
            td
              | Username
              input#Username(type='text' name="Username"  required)
          tr
            td
              | Password
              input#password(type='password' name="password" required)
          tr
            td
              | Age
              input#age(type='text' name="age" required)
          tr
            td Sex
            td#sex
              select.sex(name="sex" required)
                option(value="male" ) male
                option(value="female") female
          tr
            td
              | Height
              input#height(type='number' name="height" placeholder='cm' required)
          tr
            td
              | Weight
              input#weight(type='number' placeholder='Kg' required)
          tr
            td
              //input(type='hidden' name='action' value='add')
              button#submit(type='submit' ) Submit
          tr
